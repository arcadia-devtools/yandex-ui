{
  "extends": "@yandex-lego/configs/configs/tsconfig.dev.json",
  "compilerOptions": {
    "resolveJsonModule": true
  },
  // Обрабатываем только ts & tsx файлы в src, чтобы typescript
  // не зависал пытаясь обработать js файлы из артефактов сборки.
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
